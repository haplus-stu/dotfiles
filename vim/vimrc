"vim 初回起動時vim-plug自動インストール{{{
    " set rtp+=~/.vim/plugged/vim-plug
    " install vim-pulg
    if has('vim_starting') 
            set rtp+=~/.vim/plugged/vim-plug 
            if !isdirectory(expand('~/.vim/plugged/vim-plug'))
              echo 'install vim-plug...'
              call mkdir('~/.vim/plugged/vim-plug/',p)
              call system('git clone https://github.com/junegunn/vim-plug.git ~/.vim/plugged/vim-plug/autoload')
        end
    endif
" }}}

set runtimepath^=~/dps-helloworld
let g:denops#script#typecheck = 1


exec 'source' expand('~/.plugin.vim')
exec 'source' expand('~/.editor.vim')
exec 'source' expand('~/.keymap.vim')


